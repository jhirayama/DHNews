<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewNoticiaDetalhe"
    style="@style/AppTheme.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".detalhenoticia.DetalheNoticiaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewDetalheNoticia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardElevation="@dimen/cardview_elevation"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/imagemNoticiaDetalhe"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_detail_news"
                android:scaleType="centerCrop"
                card_view:srcCompat="@drawable/imagedetalhenoticia" />

            <ImageView
                android:id="@+id/imagemBackNoticiaDetalhe"
                android:layout_width="@dimen/icon_detail_news"
                android:layout_height="@dimen/icon_detail_news"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                card_view:srcCompat="@drawable/ic_arrow_back_white_24dp" />

            <TextView
                android:id="@+id/textViewTituloNoticiaDetalhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/margin_70_dp"
                android:text="@string/title_news"
                android:textColor="@color/primary_text_light"
                android:textSize="@dimen/title_detail_news"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewSubTituloNoticiaDetalhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/margin_110_dp"
                android:text="@string/subtitle_news"
                android:textColor="@color/primary_text_light"
                android:textSize="@dimen/text_detail_news" />

            <TextView
                android:id="@+id/textViewHorarioNoticiaDetalhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/margin_210_dp"
                android:text="@string/hours_news"
                android:textColor="@color/primary_text_light"
                android:textSize="@dimen/text_detail_news" />

            <ImageView
                android:id="@+id/imagemShareNoticiaDetalhe"
                android:layout_width="@dimen/icon_detail_news"
                android:layout_height="@dimen/icon_detail_news"
                android:layout_marginStart="@dimen/margin_290_dp"
                android:layout_marginTop="@dimen/margin_210_dp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                card_view:srcCompat="@drawable/ic_share_white_24dp" />

            <ImageView
                android:id="@+id/imagemBookMarkNoticiaDetalhe"
                android:layout_width="@dimen/icon_detail_news"
                android:layout_height="@dimen/icon_detail_news"
                android:layout_marginStart="@dimen/margin_350_dp"
                android:layout_marginTop="@dimen/margin_210_dp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                card_view:srcCompat="@drawable/ic_bookmark_border_white_24dp" />

            <TextView
                android:id="@+id/textViewConteudoNoticiaDetalhe"
                android:layout_width="@dimen/size_368_dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/margin_300_dp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:text="@string/news_detail"
                android:textColor="@color/icons"
                android:textSize="@dimen/text_detail_news" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>