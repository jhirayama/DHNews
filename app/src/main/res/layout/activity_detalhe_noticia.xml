<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewNoticiaDetalhe"
    style="@style/AppTheme.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".views.DetalheNoticiaActivity"
    tools:ignore="MissingConstraints">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_detail_news"
            android:background="#000000"></View>

        <ImageView
            android:id="@+id/imagemNoticiaDetalhe"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_detail_news"
            android:scaleType="centerCrop"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@drawable/imagedetalhenoticia" />

        <ImageView
            android:id="@+id/imagemBackNoticiaDetalhe"
            android:layout_width="@dimen/icon_detail_news"
            android:layout_height="@dimen/icon_detail_news"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.022"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/imagemNoticiaDetalhe"
            card_view:srcCompat="@drawable/ic_arrow_back_white_24dp" />

        <TextView
            android:id="@+id/textViewTituloNoticiaDetalhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/title_news"
            android:textColor="@color/primary_text_light"
            android:textSize="@dimen/title_detail_news"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/imagemBackNoticiaDetalhe" />

        <TextView
            android:id="@+id/textViewSubTituloNoticiaDetalhe"
            android:layout_width="273dp"
            android:layout_height="70dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="@string/subtitle_news"
            android:textColor="@color/primary_text_light"
            android:textSize="@dimen/text_detail_news"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="@+id/imagemNoticiaDetalhe"
            card_view:layout_constraintTop_toBottomOf="@+id/textViewTituloNoticiaDetalhe" />

        <TextView
            android:id="@+id/textViewHorarioNoticiaDetalhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/hours_news"
            android:textColor="@color/primary_text_light"
            android:textSize="@dimen/text_detail_news"
            card_view:layout_constraintBottom_toBottomOf="@+id/imagemNoticiaDetalhe"
            card_view:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textViewAssuntoNoticiaDetalhe"
            android:layout_width="86dp"
            android:layout_height="26dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:text="@string/pol_tica"
            android:textColor="@color/primary_text_light"
            android:textSize="@dimen/text_detail_news"
            card_view:layout_constraintBottom_toBottomOf="@+id/imagemNoticiaDetalhe"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toEndOf="@+id/textViewHorarioNoticiaDetalhe"
            card_view:layout_constraintTop_toTopOf="@+id/textViewHorarioNoticiaDetalhe" />

        <ImageView
            android:id="@+id/imagemShareNoticiaDetalhe"
            android:layout_width="@dimen/icon_detail_news"
            android:layout_height="@dimen/icon_detail_news"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/imagemNoticiaDetalhe"
            card_view:layout_constraintEnd_toStartOf="@+id/imagemBookMarkNoticiaDetalhe"
            card_view:srcCompat="@drawable/ic_share_white_24dp" />

        <ImageView
            android:id="@+id/imagemBookMarkNoticiaDetalhe"
            android:layout_width="@dimen/icon_detail_news"
            android:layout_height="@dimen/icon_detail_news"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/imagemNoticiaDetalhe"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:srcCompat="@drawable/ic_bookmark_border_white_24dp" />

        <TextView
            android:id="@+id/textViewConteudoNoticiaDetalhe"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/news_detail"
            android:textColor="@color/icons"
            android:textSize="@dimen/text_detail_news"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/imagemNoticiaDetalhe" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>